<h2>Lista de estoques</h2>
<hr>
<a href="/estoques/add">
    <button class="btn btn-success">Nova entrada</button>
</a>

{{#each estoques}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>Produto: {{produto.nome}}</h4>
            <small>Quantidade: {{quantidade}}</small>   <br>         
            <small>Observacoes: {{observacoes}}</small> <br>
            <small>Data de entrada: {{dataE}}</small><br>            
            <small>Data de validade: {{dataV}}</small><br>                  
            <a href="/estoques/edit/{{_id}}">
                <button class="btn btn-success mt-2">Editar entrada</button>
            </a>           
            <form action="/estoques/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2"> Deletar entrada</button>
            </form>
            
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhum produto registrado </h4>
{{/each}}